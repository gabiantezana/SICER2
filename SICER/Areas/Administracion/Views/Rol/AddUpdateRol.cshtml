@model SICER.VIEWMODEL.Administracion.Rol.RolViewModel

@{
    ViewBag.Title = "Crear rol";
    ViewBag.Icon = "plus";
}

<div class="panel">

    <div class="panel-heading">
        <h5 class="panel-title">Datos del rol</h5>
        <div class="panel-actions">
            <a class="panel-action icon wb-minus" data-toggle="panel-collapse" aria-hidden="true"></a>
        </div>
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("AddUpdateRol", "Rol", FormMethod.Post))
        {
            <div class="panel-body">
                @Html.EditorFor(x => Model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(x => Model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <br />
            <div class="panel-footer text-right">
                <button class="btn btn-primary" id="btnGuardar"><i class="fa fa-save" aria-hidden="true"></i>&nbsp; Guardar</button>
            </div>
        }
    </div>
</div>

